<div class="banner background_picture_project" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @projet.background_picture %>');">
  <div>
    <h1 class="green"><%= @projet.title %></h1>
  </div>
  <br>
  <div>
    <h2 id="green"><%= @projet.description%></h2>
  </div>
  <br>
  <div>
    <h2><a href="<%= @projet.url_projet %>" target="_blank" class="btn btn-flat" style="color: black">Voir le projet</a></h2>
  </div>
</div>
<div class="container">
  <br>
  <h1 id="green"><u>Explication du projet :</u></h1>
  <br>
  <p><%= @projet.text %></p>
</div>



